<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<div id="left"></div>
<div id="right"></div>
<div id="top"></div>
<div id="bottom"></div>
<style>
    .border {
       border-style: solid;
       border-color: black;
       border-width: 5px;
    }
    
    .image {
        max-width: 250px;
        max-height: 250px;
    }
</style>
<body>
    <h1>National Park Search</h1>
    <form action="/">
        <input type="text" id='searchInput' name='searchInput' placeholder='Search national park' value="<%=searchInput%>">
        <input type="submit" value="submit">
    </form>
    <button><a href="/">Clear Search</a></button>
    <div>
        <% for (let i=0; i<parks.length; i++) { %>
            <div class="border">
                <h3><%= parks[i].parkname %></h3>
                <h6><%= parks[i].url %></h6><br>
                <p><%= parks[i].description %> </p>
                <a href="/<%= parks[i].id %>"><img class="image" src="<%=parks[i].image %>"></a>
            </div>
        <% } %> 
    </div>
</body>
</html>